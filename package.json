{
  "name": "lit-element-effect",
  "version": "0.0.3",
  "description": "An useEffect hook for lit-elements",
  "main": "./dist/effect.js",
  "module": "./dist/effect.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --coverage",
    "test:badges": "npm test && jest-coverage-badges --output ./badges",
    "release:beta": "npm test && npm run build && npm publish --tag=beta",
    "release:patch": "npm run test:badges && npm run build && npm version patch -m 'Creating new release %s' && git push && git push --tags && gren release",
    "release:minor": "npm run test:badges && npm run build && npm version minor -m 'Creating new release %s' && git push && git push --tags && gren release"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "ts-lit-plugin": "^1.1.11",
    "typescript": "^3.9.5"
  },
  "author": "Matthias Kainer",
  "homepage": "https://github.com/MatthiasKainer/lit-element-effect",
  "license": "ISC",
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "node_modules",
      "build"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coverageReporters": [
      "json-summary",
      "html",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
